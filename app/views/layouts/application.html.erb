<!DOCTYPE html>
<html>

  <head>
      <title>zakiblog</title>
      <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
      <%= csrf_meta_tags %>
  </head>

  <body>
      <header class="header">
          <div class="header__bar row">
              <h1 class="tiltle"><a href="/">Zakiblog</a></h1>

              <% if user_signed_in? %>
              <div class="signed_in_user">
              <%= link_to "logout", destroy_user_session_path, method: :delete %>
              <a lass="post" href="/zakiblog/new">new</a>
              </div>

              <% else %>
              <div class="unsigned_in_user">
              <%= link_to 'login', new_user_session_path, class: 'post' %>
              <%= link_to 'new', zakiblog_new_path, class: 'post' %>
              </div>
              <% end %>
          </div>
      </header>

      <%= yield %>

      <footer>
          <p>
            created by Yamazaki Takehiro
          </p>
      </footer>
  </body>

</html>